<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tech_blue"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/axis_x"
            android:background="@color/this_green"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/axis_y"
            android:background="@color/this_green"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <com.nxp.cccbu.RingPercentView
            android:id="@+id/sector_out"
            android:layout_width="260dp"
            android:layout_height="260dp"
            app:radius="130dp"
            app:isRing="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </com.nxp.cccbu.RingPercentView>

        <com.nxp.cccbu.RingPercentView
            android:id="@+id/sector_middle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:radius="90dp"
            app:isRing="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </com.nxp.cccbu.RingPercentView>

        <com.nxp.cccbu.RingPercentView
            android:id="@+id/sector_inner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:radius="60dp"
            app:isRing="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </com.nxp.cccbu.RingPercentView>

        <ImageView
            android:id="@+id/circle_out"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/shape_circle_out"/>
        <ImageView
            android:id="@+id/circle_middle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/shape_circle_middle"/>
        <ImageView
            android:id="@+id/circle_inner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/shape_circle_inner"/>
        <ImageView
            android:id="@+id/circle_inner_car"
            android:layout_width="40dp"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/car1"
            />
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:text="A"
            android:textSize="11dp"
            android:textColor="@color/theme_text_primary"
            android:textAlignment="center"
            android:background="@drawable/shape_circle"
            android:layout_above="@id/circle_inner_car">
        </TextView>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:text="B"
            android:textSize="11dp"
            android:textColor="@color/theme_text_primary"
            android:textAlignment="center"
            android:background="@drawable/shape_circle"
            android:layout_below="@id/circle_inner_car">
        </TextView>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:text="C"
            android:textSize="11dp"
            android:textColor="@color/theme_text_primary"
            android:textAlignment="center"
            android:background="@drawable/shape_circle"
            android:layout_toLeftOf="@id/circle_inner_car">
        </TextView>
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:text="D"
            android:textSize="11dp"
            android:textColor="@color/theme_text_primary"
            android:textAlignment="center"
            android:background="@drawable/shape_circle"
            android:layout_toRightOf="@id/circle_inner_car">
        </TextView>

    </RelativeLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        android:layout_marginTop="280dp"
        tools:ignore="MissingConstraints"
        android:textSize="22sp" />
    <com.dxjia.library.ImageTextButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:itb_bg="#88000000"
        app:itb_icon="@drawable/start"
        app:itb_radius="10dp"
        app:itb_text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart"
        android:layout_marginTop="30dp"
        view:itb_icon_position="top"></com.dxjia.library.ImageTextButton>

    <com.dxjia.library.ImageTextButton
        android:id="@+id/btn_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:itb_bg="#88000000"
        app:itb_icon="@drawable/lock"
        app:itb_radius="10dp"
        app:itb_text="Lock"
        app:layout_constraintEnd_toStartOf="@+id/btn_start"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        android:layout_marginRight="40dp"
        view:itb_icon_position="top"></com.dxjia.library.ImageTextButton>

    <com.dxjia.library.ImageTextButton
        android:id="@+id/btn_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:itb_bg="#88000000"
        app:itb_icon="@drawable/alert"
        app:itb_radius="10dp"
        app:itb_text="Alarm"
        app:layout_constraintStart_toEndOf="@+id/btn_start"
        app:layout_constraintTop_toTopOf="@id/btn_start"
        android:layout_marginLeft="40dp"
        view:itb_icon_position="top"></com.dxjia.library.ImageTextButton>

    <ScrollView
        android:id="@+id/sv_wuart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/btn_alert"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true" >

        <TextView
            android:id="@+id/info"
            android:background="@color/shadow_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </ScrollView>

    <Button
        android:id="@+id/tv_distance"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/shape_circle_green"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_status" />


</androidx.constraintlayout.widget.ConstraintLayout>